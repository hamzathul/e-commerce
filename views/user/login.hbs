<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 pl-5"></div>
        <h2 class="text-center">Login</h2>
        <form action="/login" method="post">
        {{#if loginErr}}
            <div class="alert alert-danger">
            <strong>Invalid user!</strong> Please double check your E-mail address and password.
            </div>
        {{/if}}
            <div class="form-group">
                <label>Email address</label>
                <input type="email" name="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="Password" class="form-control" id="exampleInputPassword1">
            </div>
            <div style="width: 100%;" class="p-1 mt-2">
                <div style="width: 50%; height: 100px; float: left;">
                    <a href="/signup">Create new account?</a>
                </div>
                <div style="margin-left: 90%; height: 100px;">
                    <button type="submit" class="btn btn-primary align-right">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>