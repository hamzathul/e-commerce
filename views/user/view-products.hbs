

<!-- This is where the cards starts-->

    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: auto;">
                        <img src="/product-images/{{this.image}}"
                            class="card-img-top" style="width:inherit;height:300px" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">â‚¹ {{this.price}}</p>
                            <p class="card-text">{{this.description}}</p>
                            {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>



