<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success" style="width: 300px; margin-left:auto" type="button">Add Product</a>
        </div>
        <table class="table table-striped mt-5">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this.image}}" alt=""></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>